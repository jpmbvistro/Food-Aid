<!DOCTYPE html>
<html lang="en" dir="ltr">
  <%- include('./partials/head.ejs') %>
  <body>
    <link rel="stylesheet" href="../css/entry.css">
    <section class='entry main flex-container flex-column'>
      <h1>Welcome Back!</h1>
      <div class="entry-image-container">
        <img class='entry-image' src="../img/icons/almond-milk.png" alt="Welcome Back Image: almond milk">
      </div>
      <!-- LOGIN FORM -->
      <form class='entry-form flex-container flex-column' action="/login" method="post">
          <div class="form-group text-field-container">
              <label class='text-field-header'>Email</label>
              <input type="text" placeholder="fruit@fully.com" class="form-control input-field text-field" name="email">
          </div>
          <div class="form-group text-field-container">
              <label class='text-field-header'>Password</label>
              <input type="password" placeholder="********" class="input-field text-field form-control" name="password">
          </div>
          <% if (message.length > 0) { %>
            <div class='alert-container'><div class="alert alert-danger"><%= message %></div></div>
          <% } %>
          <div class="form-submission-content">
            <p>Need an account? <a href="/signup">Signup</a></p>
            <button type="submit" class="btn btn-warning btn-lg entry-submit">Login</button>
          </div>
      </form>
      <a class='back-link'href="/"></a>
    </section>
  </body>
</html>
