<!DOCTYPE html>
<html lang="en" dir="ltr">
  <%- include('./partials/head.ejs') %>
  <body>
    <section class='main'>
      <form class="" action="index.html" method="post">


        <div class="opening slide">
          <h1>Let's get you Setup</h1>

          <h2>Who's joining us?</h2>

          <label for="input-name">Display Name</label>
          <input class='form-input' id='input-name' type="text" name="name" placeholder='Coolest name goes here' value="">
        </div>
        <div class=" slide">
          <h2>A+ Name</h2>
          <h3>What Kind of Food Are You Looking For?</h3>
          <div class="food-options">

            <input type="checkbox" name="" value="">
          </div>

        </div>

        <section>
          <!-- LOGIN FORM -->
          <form action="/login" method="post">
              <div class="form-group">
                  <label>Email</label>
                  <input type="text" class="form-control" name="email">
              </div>
              <div class="form-group">
                  <label>Password</label>
                  <input type="password" class="form-control" name="password">
              </div>

              <button type="submit" class="btn btn-warning btn-lg">Login</button>
          </form>
          <p>Need an account? <a href="/signup">Signup</a></p>
        </section>
      </form>
    </section>
